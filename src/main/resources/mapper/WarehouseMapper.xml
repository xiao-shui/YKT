<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.WarehouseMapper">
    
    <resultMap id="BaseResultMap" type="org.example.entity.Warehouse">
        <id column="warehouse_id" property="warehouseId"/>
        <result column="warehouse_name" property="warehouseName"/>
        <result column="location" property="location"/>
        <result column="manager" property="manager"/>
        <result column="capacity" property="capacity"/>
        <result column="used_capacity" property="usedCapacity"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        warehouse_id, warehouse_name, location, manager, capacity, used_capacity, status, create_time, update_time
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM warehouses
        <where>
            <if test="warehouseName != null and warehouseName != ''">
                AND warehouse_name LIKE CONCAT('%', #{warehouseName}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*)
        FROM warehouses
        <where>
            <if test="warehouseName != null and warehouseName != ''">
                AND warehouse_name LIKE CONCAT('%', #{warehouseName}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM warehouses
        WHERE warehouse_id = #{warehouseId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="warehouseId">
        INSERT INTO warehouses (warehouse_name, location, manager, capacity, status)
        VALUES (#{warehouseName}, #{location}, #{manager}, #{capacity}, #{status})
    </insert>

    <update id="update">
        UPDATE warehouses
        <set>
            <if test="warehouseName != null">warehouse_name = #{warehouseName},</if>
            <if test="location != null">location = #{location},</if>
            <if test="manager != null">manager = #{manager},</if>
            <if test="capacity != null">capacity = #{capacity},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE warehouse_id = #{warehouseId}
    </update>

    <delete id="deleteById">
        DELETE FROM warehouses WHERE warehouse_id = #{warehouseId}
    </delete>

</mapper>

